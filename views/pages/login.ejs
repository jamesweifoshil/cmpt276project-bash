<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <% include ../partials/header.ejs %>
    <% include ../partials/nav-in.ejs %>
    <link rel="stylesheet" href="/stylesheets/login.css">
  </head>
  <body>
    <div id="loginframe">
    <h1>Log in</h1>
    <ul>
      <% if (messages.success_msg) { %>
        <li><%= messages.success_msg %></li>
      <% } %>
    </ul>
    <ul>
      <% if (messages.error){ %>
        <li><%= messages.error %></li>
      <% } %>
    </ul>
    <form action="/login" method="post">
      <div class="form-group row">
        <label class="col-md-2 col-md-offset-2">Username</label>
        <div class="col-md-5 col-md-offset-1">
          <input autofocus class="form-control" type="text" id="username" name="username" placeholder="Username"/ required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-2 col-md-offset-2">Password</label>
        <div class="col-md-5 col-md-offset-1">
          <input autofocus class="form-control" type="password" id="password" name="password" placeholder="Password"/ required />
        </div>
      </div>
      <div class="form-group row">
        
        <div class="col-sm-10">
          <div class="col-md-2 col-md-offset-4">
            <input type="submit" value="Log in" class="btn btn-sm btn-success"/>
          </div>
          <div class="col-md-2"></div>
            <a class="btn btn-sm btn-warning" href="/register">Register</a>
        </div>
      </div>
    </form>
  </div>
  </body>
</html>
