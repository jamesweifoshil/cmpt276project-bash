<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <% include ../partials/header.ejs %>
  </head>
  <body>
    <h1>Register</h1>
    <ul>
      <% if(typeof errors != 'undefined') {%> <%errors.forEach(error=>{ %>
      <li><%=error.message%></li>
      <%}) %> <%} %>
    </ul>
    <form action="/register" method="post">
      <div class="form-group row">
        <label class="col-form-label col-sm-1">Email</label>
        <div class="col-sm-2">
          <input autofocus class="form-control" type="email" id="email" name="email" placeholder="Email" maxlength="30" required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-1">Username</label>
        <div class="col-sm-2">
          <input autofocus class="form-control" type="text" id="username" name="username" placeholder="Username"/ required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-1">Password</label>
        <div class="col-sm-2">
          <input autofocus class="form-control" type="password" id="password" name="password" placeholder="Password"/ required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-1">Confirm Password</label>
        <div class="col-sm-2">
          <input autofocus class="form-control" type="password" id="password2" name="password2" placeholder="Confirm Password"/ required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-1"></label>
        <div class="col-sm-10">
            <input type="submit" value="Register" class="btn btn-sm btn-success"/>
            <a class="btn btn-sm btn-warning" href="/login">Already registered? Login here</a>
        </div>
      </div>

    </form>



  </body>
</html>
